// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Category {
  id        String   @id @default(uuid())
  name      String
  active    Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("categories")
}

model ApiKey {
  id          String   @id @default(uuid())
  name        String   // Nama/deskripsi untuk identifikasi API key
  key         String   @unique // API key yang akan digunakan
  keyHash     String   @unique // Hashed version untuk security
  active      Boolean  @default(true)
  lastUsedAt  DateTime? // Track kapan terakhir digunakan
  expiresAt   DateTime? // Optional: expiry date
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("api_keys")
}
